@model tecnova.Models.Cliente

@{
    ViewData["Title"] = "Crear Cliente";
}

<div class="container mt-4">

    <h2 class="mb-4">Registrar Nuevo Cliente</h2>

    <div class="card shadow-sm">
        <div class="card-body">

            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Identificacion" class="form-label fw-bold"></label>
                        <input asp-for="Identificacion"
                               class="form-control"
                               placeholder="Ingrese ID único del cliente" />
                        <span asp-validation-for="Identificacion" class="text-danger"></span>
                    </div>


                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre del cliente" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-bold"></label>
                        <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Direccion" class="form-label fw-bold"></label>
                        <input asp-for="Direccion" class="form-control" placeholder="Dirección completa" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-bold"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Número de teléfono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                </div>

                <div class="mt-4 d-flex gap-3">
                    <button type="submit" class="btn btn-primary px-4">Guardar Cliente</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Volver</a>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

