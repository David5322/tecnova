@model tecnova.Models.Venta

@{
    ViewData["Title"] = "Detalles de la Venta";
}

<h2>Detalles de la Venta</h2>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Información General</h4>
        <p><strong>Cliente:</strong> @Model.Cliente.Nombre</p>
        <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
    </div>
</div>

<h4>Productos Vendidos</h4>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.Detalles)
        {
            <tr>
                <td>@d.Producto.Nombre</td>
                <td>@d.Cantidad</td>
                <td>@d.PrecioUnitario.ToString("C")</td>
                <td>@d.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-dark">Volver</a>
