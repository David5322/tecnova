@model IEnumerable<TostonApp.Models.Identity.ApplicationUser>
@using TostonApp.Security
@inject IPermisosService Permisos

@{
    ViewData["Title"] = "Usuarios";
}

<div class="space-y-5">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">Usuarios</h1>
            <p class="mt-1 text-sm text-slate-500">Activa/desactiva, asigna roles y overrides de permisos.</p>
        </div>

        <a asp-action="Index"
           class="rounded-2xl border border-green-100 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-green-50">
            Volver
        </a>
    </div>

    <div class="overflow-hidden rounded-3xl border border-green-100 bg-white shadow-sm">
        <table class="min-w-full text-sm">
            <thead class="bg-green-50 text-xs font-semibold uppercase tracking-wide text-green-900/80">
                <tr>
                    <th class="px-4 py-3 text-left">Usuario</th>
                    <th class="px-4 py-3 text-left">Estado</th>
                    <th class="px-4 py-3 text-right">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-green-50">
                @foreach (var u in Model)
                {
                    <tr class="hover:bg-green-50/40">
                        <td class="px-4 py-3">
                            <div class="font-semibold text-slate-900">@u.Email</div>
                            <div class="text-xs text-slate-500">@(!string.IsNullOrWhiteSpace(u.NombreCompleto) ? u.NombreCompleto : "—")</div>
                        </td>

                        <td class="px-4 py-3">
                            @if (u.Activo)
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-green-100 px-3 py-1 text-xs font-semibold text-green-800">
                                    <span class="h-1.5 w-1.5 rounded-full bg-green-600"></span>
                                    Activo
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
                                    <span class="h-1.5 w-1.5 rounded-full bg-slate-500"></span>
                                    Inactivo
                                </span>
                            }
                        </td>

                        <td class="px-4 py-3">
                            <div class="flex justify-end gap-2">
                                @if (await Permisos.CanAsync(User, "USUARIOS_GESTIONAR"))
                                {
                                    <a asp-action="RolesPorUsuario" asp-route-userId="@u.Id"
                                       class="rounded-xl border border-green-100 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-green-50">
                                        Roles
                                    </a>
                                }

                                @if (await Permisos.CanAsync(User, "CONFIG_GESTIONAR_PERMISOS"))
                                {
                                    <a asp-action="PermisosPorUsuario" asp-route-userId="@u.Id"
                                       class="rounded-xl border border-green-100 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-green-50">
                                        Permisos
                                    </a>
                                }

                                @if (await Permisos.CanAsync(User, "USUARIOS_GESTIONAR"))
                                {
                                    <form asp-action="ToggleActivo" asp-route-id="@u.Id" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="rounded-xl border border-amber-100 bg-white px-3 py-2 text-xs font-semibold text-amber-700 hover:bg-amber-50">
                                            @(u.Activo ? "Desactivar" : "Activar")
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
