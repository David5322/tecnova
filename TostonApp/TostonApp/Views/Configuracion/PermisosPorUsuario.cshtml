@model TostonApp.Models.ViewModels.UsuarioPermisosVM
@{
    ViewData["Title"] = "Permisos por usuario";
}

<div class="space-y-5">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">Permisos por usuario</h1>
            <p class="mt-1 text-sm text-slate-500">
                Usuario: <span class="font-semibold text-slate-800">@Model.Email</span>
            </p>
        </div>

        <a asp-action="Usuarios"
           class="rounded-2xl border border-green-100 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-green-50">
            Volver
        </a>
    </div>

    <div class="rounded-3xl border border-green-100 bg-green-50 p-5">
        <div class="text-sm font-semibold text-green-900">Regla</div>
        <div class="mt-1 text-sm text-green-900/80">
            <span class="font-semibold">Por Rol</span> define el permiso base.
            Con <span class="font-semibold">Override</span> puedes forzar permitir/denegar.
            “Hereda” elimina el override.
        </div>
    </div>

    <div class="overflow-hidden rounded-3xl border border-green-100 bg-white shadow-sm">
        <table class="min-w-full text-sm">
            <thead class="bg-green-50 text-xs font-semibold uppercase tracking-wide text-green-900/80">
                <tr>
                    <th class="px-4 py-3 text-left">Permiso</th>
                    <th class="px-4 py-3 text-left">Por rol</th>
                    <th class="px-4 py-3 text-left">Override</th>
                    <th class="px-4 py-3 text-right">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-green-50">
                @foreach (var p in Model.Permisos)
                {
                    <tr class="hover:bg-green-50/40">
                        <td class="px-4 py-3">
                            <div class="font-semibold text-slate-900">@p.Codigo</div>
                            <div class="text-xs text-slate-500">@p.Descripcion</div>
                        </td>

                        <td class="px-4 py-3">
                            @if (p.PorRol)
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-green-100 px-3 py-1 text-xs font-semibold text-green-800">
                                    ✅ Sí
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
                                    ❌ No
                                </span>
                            }
                        </td>

                        <td class="px-4 py-3">
                            @if (p.Override is null)
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
                                    ↩️ Hereda
                                </span>
                            }
                            else if (p.Override == true)
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-800">
                                    👍 Permitir
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1 rounded-full bg-rose-100 px-3 py-1 text-xs font-semibold text-rose-800">
                                    ⛔ Denegar
                                </span>
                            }
                        </td>

                        <td class="px-4 py-3">
                            <div class="flex justify-end gap-2">
                                <form asp-action="GuardarPermisosPorUsuario" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@Model.UsuarioId" />
                                    <input type="hidden" name="permisoId" value="@p.PermisoId" />
                                    <input type="hidden" name="modo" value="allow" />
                                    <button class="rounded-xl border border-emerald-100 bg-white px-3 py-2 text-xs font-semibold text-emerald-700 hover:bg-emerald-50"
                                            type="submit">
                                        Permitir
                                    </button>
                                </form>

                                <form asp-action="GuardarPermisosPorUsuario" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@Model.UsuarioId" />
                                    <input type="hidden" name="permisoId" value="@p.PermisoId" />
                                    <input type="hidden" name="modo" value="deny" />
                                    <button class="rounded-xl border border-rose-100 bg-white px-3 py-2 text-xs font-semibold text-rose-700 hover:bg-rose-50"
                                            type="submit">
                                        Denegar
                                    </button>
                                </form>

                                <form asp-action="GuardarPermisosPorUsuario" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@Model.UsuarioId" />
                                    <input type="hidden" name="permisoId" value="@p.PermisoId" />
                                    <input type="hidden" name="modo" value="inherit" />
                                    <button class="rounded-xl border border-slate-200 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50"
                                            type="submit">
                                        Heredar
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
