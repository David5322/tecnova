@model IEnumerable<TostonApp.Models.Identity.ApplicationRole>
@using TostonApp.Security
@inject IPermisosService Permisos

@{
    ViewData["Title"] = "Roles";
}

<div class="space-y-5">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">Roles</h1>
            <p class="mt-1 text-sm text-slate-500">Gestiona los roles del sistema.</p>
        </div>

        <div class="flex gap-2">
            @if (await Permisos.CanAsync(User, "CONFIG_GESTIONAR_ROLES"))
            {
                <a asp-action="CrearRol"
                   class="rounded-2xl bg-green-600 px-4 py-2 text-sm font-semibold text-white hover:bg-green-700">
                    + Crear rol
                </a>
            }
            <a asp-action="Index"
               class="rounded-2xl border border-green-100 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-green-50">
                Volver
            </a>
        </div>
    </div>

    <div class="overflow-hidden rounded-3xl border border-green-100 bg-white shadow-sm">
        <table class="min-w-full text-sm">
            <thead class="bg-green-50 text-xs font-semibold uppercase tracking-wide text-green-900/80">
                <tr>
                    <th class="px-4 py-3 text-left">Rol</th>
                    <th class="px-4 py-3 text-left">Descripción</th>
                    <th class="px-4 py-3 text-right">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-green-50">
                @foreach (var r in Model)
                {
                    <tr class="hover:bg-green-50/40">
                        <td class="px-4 py-3 font-semibold text-slate-900">@r.Name</td>
                        <td class="px-4 py-3 text-slate-600">@(!string.IsNullOrWhiteSpace(r.Descripcion) ? r.Descripcion : "—")</td>
                        <td class="px-4 py-3">
                            <div class="flex justify-end gap-2">
                                @if (await Permisos.CanAsync(User, "CONFIG_GESTIONAR_PERMISOS"))
                                {
                                    <a asp-action="PermisosPorRol" asp-route-rolId="@r.Id"
                                       class="rounded-xl border border-green-100 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-green-50">
                                        Permisos
                                    </a>
                                }

                                @if (await Permisos.CanAsync(User, "CONFIG_GESTIONAR_ROLES"))
                                {
                                    <a asp-action="EditarRol" asp-route-id="@r.Id"
                                       class="rounded-xl border border-green-100 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-green-50">
                                        Editar
                                    </a>

                                    <form asp-action="EliminarRol" asp-route-id="@r.Id" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="rounded-xl border border-red-100 bg-white px-3 py-2 text-xs font-semibold text-red-700 hover:bg-red-50"
                                                onclick="return confirm('¿Eliminar rol @r.Name?');">
                                            Eliminar
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
