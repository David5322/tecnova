@model TostonApp.Models.Dominio.Producto
@{
    ViewData["Title"] = "Nuevo producto";
}

<div class="max-w-3xl">
    <div class="mb-5">
        <h1 class="text-2xl font-bold text-slate-900">Nuevo producto</h1>
        <p class="mt-1 text-sm text-slate-500">Crea un producto y define si será visible para clientes.</p>
    </div>

    <form asp-action="Create" method="post" class="space-y-5">
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="sm:col-span-2">
                <label class="text-sm font-semibold text-slate-700">Nombre</label>
                <input asp-for="Nombre"
                       class="mt-1 w-full rounded-2xl border border-green-100 bg-white px-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                       placeholder="Ej: Tostón Clásico" />
                <span asp-validation-for="Nombre" class="mt-1 block text-xs text-red-600"></span>
            </div>

            <div class="sm:col-span-2">
                <label class="text-sm font-semibold text-slate-700">Descripción</label>
                <textarea asp-for="Descripcion" rows="4"
                          class="mt-1 w-full rounded-2xl border border-green-100 bg-white px-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                          placeholder="Describe el producto..."></textarea>
                <span asp-validation-for="Descripcion" class="mt-1 block text-xs text-red-600"></span>
            </div>

            <div>
                <label class="text-sm font-semibold text-slate-700">Precio</label>
                <input asp-for="Precio" type="number" step="0.01"
                       class="mt-1 w-full rounded-2xl border border-green-100 bg-white px-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                       placeholder="0.00" />
                <span asp-validation-for="Precio" class="mt-1 block text-xs text-red-600"></span>
            </div>

            <div class="flex items-center gap-4 rounded-2xl border border-green-100 bg-green-50 p-4">
                <div class="flex-1">
                    <div class="text-sm font-semibold text-slate-900">Estado</div>
                    <div class="text-xs text-slate-600">Actívalo para que esté disponible.</div>
                </div>
                <label class="inline-flex cursor-pointer items-center gap-2">
                    <input asp-for="Activo" class="h-5 w-5 rounded border-green-300 text-green-600" />
                    <span class="text-sm font-semibold text-slate-700">Activo</span>
                </label>
            </div>

            <div class="flex items-center gap-4 rounded-2xl border border-green-100 bg-green-50 p-4 sm:col-span-2">
                <div class="flex-1">
                    <div class="text-sm font-semibold text-slate-900">Visibilidad</div>
                    <div class="text-xs text-slate-600">Si está activo, el cliente lo puede ver.</div>
                </div>
                <label class="inline-flex cursor-pointer items-center gap-2">
                    <input asp-for="VisibleParaClientes" class="h-5 w-5 rounded border-green-300 text-green-600" />
                    <span class="text-sm font-semibold text-slate-700">Visible</span>
                </label>
            </div>
        </div>

        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-end">
            <a asp-action="Index"
               class="inline-flex items-center justify-center rounded-2xl border border-green-100 bg-white px-5 py-3 text-sm font-semibold text-slate-700 hover:bg-green-50">
                Cancelar
            </a>

            <button type="submit"
                    class="inline-flex items-center justify-center rounded-2xl bg-green-600 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-green-700">
                Guardar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
