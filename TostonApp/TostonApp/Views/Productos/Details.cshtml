@model TostonApp.Models.Dominio.Producto
@using System.Globalization
@{
    ViewData["Title"] = "Detalle";
    var culture = new CultureInfo("es-CO");
}

<div class="max-w-3xl space-y-5">
    <div class="flex items-start justify-between gap-3">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">@Model.Nombre</h1>
            <p class="mt-1 text-sm text-slate-500">Detalle del producto #@Model.Id</p>
        </div>

        <span class="rounded-2xl bg-green-100 px-3 py-2 text-sm font-semibold text-green-800">
            @Model.Precio.ToString("C0", culture)
        </span>
    </div>

    <div class="grid grid-cols-1 gap-3 sm:grid-cols-3">
        <div class="rounded-2xl border border-green-100 bg-white p-4 shadow-sm">
            <div class="text-xs font-semibold text-slate-500">Estado</div>
            <div class="mt-1 text-sm font-semibold text-slate-900">@((Model.Activo) ? "Activo" : "Inactivo")</div>
        </div>

        <div class="rounded-2xl border border-green-100 bg-white p-4 shadow-sm">
            <div class="text-xs font-semibold text-slate-500">Visible clientes</div>
            <div class="mt-1 text-sm font-semibold text-slate-900">@((Model.VisibleParaClientes) ? "Sí" : "No")</div>
        </div>

        <div class="rounded-2xl border border-green-100 bg-white p-4 shadow-sm">
            <div class="text-xs font-semibold text-slate-500">ID</div>
            <div class="mt-1 text-sm font-semibold text-slate-900">#@Model.Id</div>
        </div>
    </div>

    <div class="rounded-3xl border border-green-100 bg-white p-5 shadow-sm">
        <div class="text-sm font-semibold text-slate-900">Descripción</div>
        <p class="mt-2 text-sm text-slate-600">
            @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
            {
                @Model.Descripcion
            }
            else
            {
                <span class="text-slate-400">Sin descripción</span>
            }
        </p>
    </div>

    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-end">
        <a asp-action="Index"
           class="inline-flex items-center justify-center rounded-2xl border border-green-100 bg-white px-5 py-3 text-sm font-semibold text-slate-700 hover:bg-green-50">
            Volver
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id"
           class="inline-flex items-center justify-center rounded-2xl bg-green-600 px-5 py-3 text-sm font-semibold text-white hover:bg-green-700">
            Editar
        </a>
    </div>
</div>
