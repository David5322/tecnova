@model TostonApp.Models.Dominio.Producto
@using System.Globalization
@{
    ViewData["Title"] = "Eliminar";
    var culture = new CultureInfo("es-CO");
}

<div class="max-w-3xl space-y-5">
    <div>
        <h1 class="text-2xl font-bold text-slate-900">Eliminar producto</h1>
        <p class="mt-1 text-sm text-slate-500">
            Esta acción no se puede deshacer. Confirma antes de eliminar.
        </p>
    </div>

    <div class="rounded-3xl border border-red-100 bg-red-50 p-5">
        <div class="flex items-start justify-between gap-3">
            <div>
                <div class="text-lg font-bold text-slate-900">@Model.Nombre</div>
                <div class="mt-1 text-sm text-slate-600">#@Model.Id • @Model.Precio.ToString("C0", culture)</div>
            </div>
            <span class="rounded-2xl bg-white px-3 py-2 text-sm font-semibold text-red-700 border border-red-100">
                ⚠️ Riesgo alto
            </span>
        </div>

        <div class="mt-3 text-sm text-slate-700">
            @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
            {
                <span>@Model.Descripcion</span>
            }
            else
            {
                <span class="text-slate-500">Sin descripción</span>
            }
        </div>

        <div class="mt-4 grid grid-cols-1 gap-2 sm:grid-cols-2">
            <div class="rounded-2xl bg-white p-3 border border-red-100">
                <div class="text-xs font-semibold text-slate-500">Estado</div>
                <div class="text-sm font-semibold text-slate-900">@((Model.Activo) ? "Activo" : "Inactivo")</div>
            </div>
            <div class="rounded-2xl bg-white p-3 border border-red-100">
                <div class="text-xs font-semibold text-slate-500">Visible clientes</div>
                <div class="text-sm font-semibold text-slate-900">@((Model.VisibleParaClientes) ? "Sí" : "No")</div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-end">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <a asp-action="Index"
           class="inline-flex items-center justify-center rounded-2xl border border-green-100 bg-white px-5 py-3 text-sm font-semibold text-slate-700 hover:bg-green-50">
            Cancelar
        </a>

        <button type="submit"
                class="inline-flex items-center justify-center rounded-2xl bg-red-600 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-red-700">
            Sí, eliminar
        </button>
    </form>
</div>
