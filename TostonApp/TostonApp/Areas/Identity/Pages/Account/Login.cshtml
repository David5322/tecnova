@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="min-h-[70vh] flex items-center justify-center px-4 py-10">
    <div class="w-full max-w-5xl grid grid-cols-1 lg:grid-cols-2 gap-6">

        <!-- Left / Branding -->
        <div class="hidden lg:block">
            <div class="h-full rounded-3xl border border-green-100 bg-gradient-to-br from-green-50 to-white p-8 shadow-sm">
                <div class="flex items-center gap-3">
                    <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-green-600 text-white shadow-sm">
                        <!-- leaf icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11 21c0-7 7-14 14-14 0 7-7 14-14 14Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 7c0 4.418 3.582 8 8 8" />
                        </svg>
                    </div>
                    <div>
                        <div class="text-xl font-bold text-slate-900">TostonApp</div>
                        <div class="text-sm text-slate-500">Acceso seguro por roles y permisos</div>
                    </div>
                </div>

                <div class="mt-8 space-y-4">
                    <div class="rounded-2xl bg-white p-4 border border-green-100">
                        <div class="text-sm font-semibold text-slate-900">✔ Control por permisos</div>
                        <p class="mt-1 text-sm text-slate-600">
                            El menú y las acciones se habilitan con <span class="font-semibold">PERMISO:CODIGO</span>.
                        </p>
                    </div>
                    <div class="rounded-2xl bg-white p-4 border border-green-100">
                        <div class="text-sm font-semibold text-slate-900">✔ Protección del Admin</div>
                        <p class="mt-1 text-sm text-slate-600">
                            Rol Admin protegido contra eliminación y pérdida de permisos críticos.
                        </p>
                    </div>
                    <div class="rounded-2xl bg-white p-4 border border-green-100">
                        <div class="text-sm font-semibold text-slate-900">✔ Módulo avanzado</div>
                        <p class="mt-1 text-sm text-slate-600">
                            Roles, permisos por rol, permisos por usuario y validaciones reales.
                        </p>
                    </div>
                </div>

                <div class="mt-10 text-xs text-slate-500">
                    © @DateTime.Now.Year TostonApp • Seguridad profesional
                </div>
            </div>
        </div>

        <!-- Right / Form -->
        <div class="rounded-3xl border border-green-100 bg-white p-6 sm:p-8 shadow-sm">
            <div class="flex items-start justify-between gap-3">
                <div>
                    <h1 class="text-2xl font-bold text-slate-900">Iniciar sesión</h1>
                    <p class="mt-1 text-sm text-slate-500">Ingresa con tu correo y contraseña.</p>
                </div>
                <span class="inline-flex items-center gap-2 rounded-2xl bg-green-50 px-3 py-2 text-xs font-semibold text-green-800 border border-green-100">
                    <!-- lock icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V7.875a4.125 4.125 0 1 0-8.25 0V10.5" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 10.5h10.5A2.25 2.25 0 0 1 19.5 12.75v6A2.25 2.25 0 0 1 17.25 21H6.75A2.25 2.25 0 0 1 4.5 18.75v-6A2.25 2.25 0 0 1 6.75 10.5Z" />
                    </svg>
                    Seguro
                </span>
            </div>

            <form id="account" method="post" class="mt-6 space-y-4">
                <div asp-validation-summary="ModelOnly"
                     class="rounded-2xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"
                     role="alert"></div>

                <div>
                    <label asp-for="Input.Email" class="text-sm font-semibold text-slate-700">Correo</label>
                    <div class="mt-1 relative">
                        <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-slate-400">
                            <!-- mail icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5A2.25 2.25 0 0 1 19.5 19.5h-15A2.25 2.25 0 0 1 2.25 17.25V6.75" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="m21.75 6.75-9.47 6.313a1.5 1.5 0 0 1-1.56 0L2.25 6.75" />
                            </svg>
                        </span>
                        <input asp-for="Input.Email"
                               class="w-full rounded-2xl border border-green-100 bg-white pl-10 pr-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                               autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="text-sm font-semibold text-slate-700">Contraseña</label>
                    <div class="mt-1 relative">
                        <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-slate-400">
                            <!-- key icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a4.5 4.5 0 1 1-8.132 2.736L3 12.604V17.25h4.646l1.5-1.5h2.104l1.5-1.5h2.25l1.5-1.5v-2.104l.382-.382a4.48 4.48 0 0 1-1.632-3.514Z" />
                            </svg>
                        </span>
                        <input asp-for="Input.Password" type="password"
                               class="w-full rounded-2xl border border-green-100 bg-white pl-10 pr-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                               autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Input.Password" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <div class="flex items-center justify-between gap-3">
                    <label class="inline-flex items-center gap-2 text-sm text-slate-700">
                        <input class="h-5 w-5 rounded border-green-300 text-green-600" asp-for="Input.RememberMe" />
                        Recuérdame
                    </label>

                    <a id="forgot-password" asp-page="./ForgotPassword"
                       class="text-sm font-semibold text-green-700 hover:text-green-800">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

                <button id="login-submit" type="submit"
                        class="w-full rounded-2xl bg-green-600 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-green-700">
                    Entrar
                </button>

                <div class="text-center text-sm text-slate-600">
                    ¿No tienes cuenta?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                       class="font-semibold text-green-700 hover:text-green-800">
                        Regístrate
                    </a>
                </div>

                <div class="text-center text-xs text-slate-500">
                    Al continuar aceptas las políticas de acceso de la aplicación.
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
