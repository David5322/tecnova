@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="min-h-[70vh] flex items-center justify-center px-4 py-10">
    <div class="w-full max-w-5xl grid grid-cols-1 lg:grid-cols-2 gap-6">

        <!-- Left / Branding -->
        <div class="hidden lg:block">
            <div class="h-full rounded-3xl border border-green-100 bg-gradient-to-br from-green-50 to-white p-8 shadow-sm">
                <div class="flex items-center gap-3">
                    <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-green-600 text-white shadow-sm">
                        <!-- user-plus icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 20.25a7.5 7.5 0 0 1 15 0" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 8v6m3-3h-6" />
                        </svg>
                    </div>
                    <div>
                        <div class="text-xl font-bold text-slate-900">Crea tu cuenta</div>
                        <div class="text-sm text-slate-500">Acceso controlado por configuración</div>
                    </div>
                </div>

                <div class="mt-8 space-y-4">
                    <div class="rounded-2xl bg-white p-4 border border-green-100">
                        <div class="text-sm font-semibold text-slate-900">🎯 Recomendación</div>
                        <p class="mt-1 text-sm text-slate-600">
                            El rol y permisos se asignan por el Administrador desde Configuración.
                        </p>
                    </div>
                    <div class="rounded-2xl bg-white p-4 border border-green-100">
                        <div class="text-sm font-semibold text-slate-900">🔒 Seguridad</div>
                        <p class="mt-1 text-sm text-slate-600">
                            El sistema protege el rol Admin para evitar perder control del módulo.
                        </p>
                    </div>
                </div>

                <div class="mt-10 text-xs text-slate-500">
                    Tip: usa una contraseña fuerte (8+ con mayúscula, minúscula, número y símbolo).
                </div>
            </div>
        </div>

        <!-- Right / Form -->
        <div class="rounded-3xl border border-green-100 bg-white p-6 sm:p-8 shadow-sm">
            <div>
                <h1 class="text-2xl font-bold text-slate-900">Registro</h1>
                <p class="mt-1 text-sm text-slate-500">Crea una nueva cuenta para ingresar a TostonApp.</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-6 space-y-4">
                <div asp-validation-summary="ModelOnly"
                     class="rounded-2xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"
                     role="alert"></div>

                <div>
                    <label asp-for="Input.Email" class="text-sm font-semibold text-slate-700">Correo</label>
                    <div class="mt-1 relative">
                        <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-slate-400">
                            <!-- mail icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5A2.25 2.25 0 0 1 19.5 19.5h-15A2.25 2.25 0 0 1 2.25 17.25V6.75" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="m21.75 6.75-9.47 6.313a1.5 1.5 0 0 1-1.56 0L2.25 6.75" />
                            </svg>
                        </span>
                        <input asp-for="Input.Email"
                               class="w-full rounded-2xl border border-green-100 bg-white pl-10 pr-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                               autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="text-sm font-semibold text-slate-700">Contraseña</label>
                    <input asp-for="Input.Password" type="password"
                           class="mt-1 w-full rounded-2xl border border-green-100 bg-white px-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                           autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="text-sm font-semibold text-slate-700">Confirmar contraseña</label>
                    <input asp-for="Input.ConfirmPassword" type="password"
                           class="mt-1 w-full rounded-2xl border border-green-100 bg-white px-4 py-3 text-sm outline-none focus:border-green-300 focus:ring-4 focus:ring-green-100"
                           autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <button id="registerSubmit" type="submit"
                        class="w-full rounded-2xl bg-green-600 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-green-700">
                    Crear cuenta
                </button>

                <div class="text-center text-sm text-slate-600">
                    ¿Ya tienes cuenta?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                       class="font-semibold text-green-700 hover:text-green-800">
                        Inicia sesión
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
